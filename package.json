{
  "name": "focus",
  "version": "1.0.8",
  "description": "Todo list with Pomodoro timer",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron .",
    "dist": "npm run build && set CSC_IDENTITY_AUTO_DISCOVERY=false&& electron-builder --win --x64",
    "publish": "npm run build && set CSC_IDENTITY_AUTO_DISCOVERY=false&& electron-builder --win --x64 --publish always"
  },
  "build": {
    "appId": "com.focus.todopomodoro",
    "productName": "Focus",
    "directories": {
      "output": "C:\\FocusBuild"
    },
    "asar": true,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "sign": null,
      "signingHashAlgorithms": null
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Focus"
    },
    "publish": {
      "provider": "github",
      "owner": "DevCookiie",
      "repo": "focus-app",
      "releaseType": "release"
    },
    "releaseInfo": {
      "releaseNotesFile": "RELEASE_NOTES.md"
    }
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "electron": "^29.0.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "todo",
    "pomodoro",
    "electron",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "electron-updater": "^6.8.3"
  }
}
